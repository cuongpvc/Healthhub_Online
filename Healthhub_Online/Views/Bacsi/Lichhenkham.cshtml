
@{
    ViewBag.Title = "lichhen";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var u = Session["userBS"] as Healthhub_Online.Models.QuanTri;
}

@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#calendar').fullCalendar({
                theme: true,
                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                defaultView: 'month',
                editable: false,
                allDaySlot: false,
                selectable: true,
                events: "/Bacsi/Lichdangluoi/"
            });
        });
    </script>
}

<br />
<div class="row">



    <div class="col-md-8">
        <h2>Lịch khám của bạn</h2>
        <button>
            @Html.ActionLink("Xác nhận lịch", "Lichdangcho")
        </button>


        <button>
            @Html.ActionLink("Xem dạng danh sách", "Lichdaxacnhan")
        </button>

        <div id="calendar" style="margin-top:50px"></div>
    </div>
    <div class="col-md-4">
        <img src="~/Common/images/zoom.png" class="img-responsive" style="margin-top:300px" />
    </div>



</div>
