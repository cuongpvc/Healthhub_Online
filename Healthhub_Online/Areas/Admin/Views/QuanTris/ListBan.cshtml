@model IEnumerable<Healthhub_Online.Models.QuanTri>

@{
    ViewBag.Title = "ListBan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ListBan</h2>

<p>
    @Html.ActionLink("Trở Về", "Index")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Khoa.TenKhoa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaiKhoan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MatKhau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VaiTro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThongTinBacSi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrinhDo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnhBia)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(x => x.TrangThai == false))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Khoa.TenKhoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaiKhoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VaiTro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThongTinBacSi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrinhDo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnhBia)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDQuanTri }) |
                @Html.ActionLink("Details", "Details", new { id = item.IDQuanTri }) |
                @if (item.TrangThai == true)
                {
                    @Html.ActionLink("Ban", "Ban", new { id = item.IDQuanTri }, new { @class = "btn btn-danger" })
                }
                else
                {
                    @Html.ActionLink("UnBan", "UnBan", new { id = item.IDQuanTri }, new { @class = "btn btn-success" })
                }
            </td>
        </tr>
    }

</table>
